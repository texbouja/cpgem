<?xml version="1.0" encoding="utf-8"?>
<!-- This file, the project manifest, provides the overall configuration for your PreTeXt project. To edit the content of your document, open `source/main.ptx`. See https://pretextbook.org/doc/guide/html/processing-CLI.html#cli-project-manifest. -->

<project
  ptx-version="2" 
  source="."
  output-dir="output"
  publication="../../publication"
  xsl="../../xsl"
>
  <targets>
    <target 
      name="web" 
      format="html"
      source="main.ptx" 
      publication="publication.ptx"
      output-dir="standard"
    >
    </target>
     <target 
      name="cpgem" 
      format="html"
      source="main.ptx" 
      publication="concours.ptx"
      xsl="cpgem-html.xsl"
      output-dir="cpgem"
      deploy-dir="cpgem"
    >
    </target>

    <target 
      name="print" 
      format="pdf"
      latex-engine="pdflatex"
      source="main.ptx"
      publication="print.ptx"
      xsl="dmoi-latex.xsl" 
    />
    <target 
      name="latex"
      format="latex"
      source="main.ptx"
      publication="publication.ptx"
      xsl="dmoi-latex.xsl"
    />
    <target 
      name="exer-latex"
      format="latex"
      source="main.ptx"
      publication="exercises.ptx"
      xsl="dmoi-latex.xsl"
    />
    <target 
      name="crc-print" 
      format="pdf"
      latex-engine="pdflatex"
      source="main.ptx"
      publication="crc.ptx"
      xsl="dmoi-latex-crc.xsl"
    />
    <target 
      name="subset" 
      format="pdf"
      latex-engine="pdflatex"
      source="dmoi-sample.ptx"
      publication="crc.ptx"
      xsl="dmoi-latex-crc.xsl"
    />
    <target 
      name="crc-latex"
      format="latex"
      source="main.ptx"
      publication="crc.ptx"
      xsl="dmoi-latex-crc.xsl"
    />
    <target 
      name="epub"
      format="epub"
      source="main.ptx"
      publication="publication.ptx"
      xsl="dmoi-latex.xsl"
    />
    <target name="ww-sets" format="webwork" source="main.ptx" />
  </targets>
</project>